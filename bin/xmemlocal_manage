#!/usr/bin/perl

# single core xmemlocal, with recovery from failures.

system("rm -f body_modset.xdb body_memory.xdb");

my $extra;
while (my $arg = shift) {
    $extra .= " $arg";
}

exec("xwatch xmemlocal_manage.txt xmanager -spawn-count=1 -spawn-command='xwatch xmemlocal.txt xmemlocal $extra'");
